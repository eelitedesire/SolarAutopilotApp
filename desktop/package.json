{
  "name": "carbonoz-solarautopilot-desktop",
  "version": "1.0.0",
  "description": "CARBONOZ SolarAutopilot Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\" \"wait-on http://localhost:3000 && electron .\"",
    "backend": "cd .. && npm start",
    "frontend": "cd ../frontend && npm run dev",
    "build": "npm run build-frontend && npm run build-backend",
    "build-frontend": "cd ../frontend && npm run build",
    "build-backend": "cd .. && npm install --production",
    "pack": "electron-builder --dir",
    "dist": "npm run build-frontend && electron-builder",
    "dist-all": "npm run build-frontend && electron-builder -mwl",
    "dist-mac": "npm run build-frontend && electron-builder --mac",
    "dist-win": "npm run build-frontend && electron-builder --win",
    "dist-linux": "npm run build-frontend && electron-builder --linux"
  },
  "build": {
    "appId": "com.carbonoz.solarautopilot",
    "productName": "CARBONOZ SolarAutopilot",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "docker-manager.js",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../server.js",
        "to": "server.js"
      },
      {
        "from": "../package.json",
        "to": "package.json"
      },
      {
        "from": "../package-lock.json",
        "to": "package-lock.json",
        "filter": ["**/*"]
      },
      {
        "from": "../frontend/dist",
        "to": "frontend/dist",
        "filter": ["**/*"]
      },
      {
        "from": "../services",
        "to": "services",
        "filter": ["**/*"]
      },
      {
        "from": "../routes",
        "to": "routes",
        "filter": ["**/*"]
      },
      {
        "from": "../ai",
        "to": "ai",
        "filter": ["**/*"]
      },
      {
        "from": "../utils",
        "to": "utils",
        "filter": ["**/*"]
      },
      {
        "from": "../node_modules",
        "to": "node_modules",
        "filter": ["**/*"]
      },
      {
        "from": "../data",
        "to": "data",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "minimumSystemVersion": "10.13.0",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": ["AppImage"],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "wait-on": "^7.2.0"
  }
}